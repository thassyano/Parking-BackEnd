{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd Estacionamento.Api && dotnet restore && dotnet publish -c Release -o ./publish"
  },
  "deploy": {
    "startCommand": "cd Estacionamento.Api && dotnet ./publish/Estacionamento.Api.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

